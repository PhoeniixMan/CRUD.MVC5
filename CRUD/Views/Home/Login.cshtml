@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<br/>
<div class="jumbotron">
    <div class="col-lg-12" style="font-size: medium">
        <div class="box-info">
            <form action="#" class="form-horizontal row-border">
                <div class="form-group" style="text-align: right">
                    <label class="col-sm-3">
                        Username
                    </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" data-bind="value: username" />
                    </div>
                </div>
                <div class="form-group" style="text-align: right">
                    <label class="col-sm-3">
                        Password
                    </label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" data-bind="value: password" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/login.js")"></script>
}