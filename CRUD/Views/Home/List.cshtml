@{
    ViewBag.Title = "CRUD";
}

<div class="jumbotron">
    <div class="col-sm-12">
        <h3 style="text-align: center">Employee List</h3>
    </div>
    <div class="col-sm-12">
        <div class="col-sm-11" style="padding-left: 0">
            <a class="btn btn-warning" href="@Url.Action("Report", "Home")">
                Generate Report
            </a>
        </div>
        <div class="col-sm-1" style="padding-top: 10px; padding-right: 0">
            <a class="btn btn-success" href="@Url.Action("Create", "Home")">
                Create
            </a>
        </div>
    </div>
    <br/><br/>
    <div class="table-responsive" style="font-size: 70%">
        <table class="table table-condensed table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 5%;  text-align: center">No</th>
                    <th style="width: 15%; text-align: center">Name</th>
                    <th style="width: 20%; text-align: center">Address</th>
                    <th style="width: 15%; text-align: center">Email</th>
                    <th style="width: 10%; text-align: center">Contact</th>
                    <th style="width: 13%; text-align: center">Actions</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: employees">
                <tr>
                    <td style="text-align: center">
                        <span data-bind="text: $index() + 1"></span>
                    </td>
                    <td style="text-align: center">
                        <span data-bind="text: name"></span>
                    </td>
                    <td style="text-align: center">
                        <span data-bind="text: address"></span>
                    </td>
                    <td style="text-align: center">
                        <span data-bind="text: email"></span>
                    </td>
                    <td style="text-align: center">
                        <span data-bind="text: contact"></span>
                    </td>
                    <td style="text-align: center">
                        <div>
                            <button type="button" class="btn btn-primary" data-bind="click: $root.showToEdit">
                                Update
                            </button>
                            &nbsp;&nbsp;
                            <button type="button" class="btn btn-danger" data-bind="click: $root.confirmToDelete">
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/list.js")"></script>
}