@{
    ViewBag.Title = "CRUD";
}

<h3>Update Employee</h3>
<hr>

<input type="hidden" value="@(Model)" id="txtEmployeeId" />

<div class="col-lg-12">
    <div class="box-info">
        <form action="#" class="form-horizontal row-border">
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    Name
                </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" data-bind="value: name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    Address
                </label>
                <div class="col-sm-6">
                    <textarea class="form-control" data-bind="value: address"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    Email
                </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" data-bind="value: email" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">
                    Contact
                </label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" data-bind="value: contact" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3"></label>
                <div class="col-sm-9 col-sm-offset-3">
                    <div class="btn-toolbar">
                        <button class="btn btn-primary" type="button" data-bind="click: update">
                            Update
                        </button>
                        <a class="btn btn-info" href="#" data-bind="click: reset">
                            Refresh
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section scripts
{
    <script src="@Url.Content("~/Scripts/update.js")"></script>
}
